# Filename: encryptor3000.kv

<FullGrid>:
    
    rows: 2

    GridLayout:
        id: TopGrid
        cols : 1
        padding : [100]
        spacing:[50]
            
        Label:
            id: title
            text: 'THE ENCRYPTOR 3000'
            font_size: 85
            size_hint: 1,.3
            bold: True
            
        Label:
            id: instruc
            text: 'Enter a prompt to convert to a password'
            size_hint: 1, 0.2
                
        TextInput:
            id: prompt
            text: ''
            multiline: False
            hint_text: ' Your Prompt'
            font_size: 70
            size_hint: 1,1
                
        Label:
            id: password
            text: ''
            size_hint: 1,.2
        
        
    GridLayout:
        id: BottomGrid
        rows: 1
            
        Button:
            id: toCopy
            background_normal:''
            background_color: [123/255,87/255,145/255,1]
            text: 'Copy and Convert to Password'
            on_press: root.copyTxt()
    
            
        Button:
            id: clear
            background_normal:''
            background_color: [69/255,37/255,89/255,1]
            text: 'Clear'
            on_press: root.reset()
